{
  "routes": [
    {
      "route": "/",
      "rewrite": "/nl/index.html"
    },
    {
      "route": "/nl/*",
      "headers": {
        "cache-control": "public, max-age=3600, must-revalidate"
      }
    },
    {
      "route": "/en/*",
      "headers": {
        "cache-control": "public, max-age=3600, must-revalidate"
      }
    },
    {
      "route": "/assets/*",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/*",
      "headers": {
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block",
        "Referrer-Policy": "strict-origin-when-cross-origin",
        "Permissions-Policy": "geolocation=(), microphone=(), camera=()"
      }
    }
  ],
  "navigationFallback": {
    "rewrite": "/404.html",
    "exclude": [
      "/assets/*",
      "/images/*",
      "/*.{css,scss,js,json,xml,txt,map,ico,png,jpg,jpeg,gif,svg,woff,woff2,ttf,eot}"
    ]
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/404.html",
      "statusCode": 404
    }
  },
  "globalHeaders": {
    "content-security-policy": "default-src 'self'; script-src 'self' 'unsafe-inline' https://polyfill.io https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self'"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".md": "text/markdown"
  },
  "platform": {
    "apiRuntime": "node:18"
  },
  "networking": {
    "allowedIpAddresses": []
  }
}
